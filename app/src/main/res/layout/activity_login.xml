<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:background="#FA6060"
    tools:context=".Login">

    <TextView
        android:id="@+id/labelTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="WaveTech"
        android:gravity="center"
        android:textSize="40dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="246dp"
        android:layout_height="257dp"
        android:layout_marginBottom="10dp"
        app:srcCompat="@drawable/melancia" />

    <TextView
        android:id="@+id/labelSaudacao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Seja Bem-Vindo!"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginBottom="15dp"/>

    <EditText
        android:id="@+id/emailTextEdit"
        android:layout_width="match_parent"
        android:layout_height="25pt"
        android:paddingHorizontal="20dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:hint="@string/email"
        android:textColor="@color/black"
        android:textColorHint="#95A1AC"
        android:background="@drawable/rounded_corner"
        android:layout_marginBottom="25dp"
        />

    <EditText
        android:id="@+id/passwordTextEdit"
        android:layout_width="match_parent"
        android:layout_height="25pt"
        android:paddingHorizontal="20dp"
        android:ems="10"
        android:inputType="numberPassword"
        android:hint="@string/password"
        android:textColor="@color/black"
        android:textColorHint="#95A1AC"
        android:background="@drawable/rounded_corner"/>

    <LinearLayout
        android:layout_marginVertical="20dp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="70dp"
            android:orientation="vertical"
            android:gravity="start"
            android:layout_marginRight="20dp">

            <TextView
                android:id="@+id/naoPossuiConta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="@string/naoPossuiConta"
                android:textColor="@color/white"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/cadastre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Cadastre"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#262D34"/>

        </LinearLayout>

        <Button
            android:id="@+id/loginButton"
            android:layout_width="160dp"
            android:layout_height="70dp"
            android:text="Login"
            android:textSize="20dp"
            android:textStyle="bold"
            android:fontFamily="monospace"/>

    </LinearLayout>

    <TextView
        android:id="@+id/esqueceuSenha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Esqueceu a senha?"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/googleLoginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/googleg_standard_color_18"
        android:text="Entre com Google"
        android:textSize="15dp"
        android:layout_marginTop="20dp"/>


</LinearLayout>